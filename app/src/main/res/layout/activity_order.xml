<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Activity.OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/customer_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#C1C1C1" />

        <Spinner
            android:id="@+id/product_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#C1C1C1" />

        <TextView
            android:id="@+id/customer_name_set"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Customer Name"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/date_pic"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text=" Pic Date"
               />
            <TextView
                android:id="@+id/date_show"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="date show"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_height="50dp" />

        <ListView
            android:id="@+id/product_select_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_total_amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Total amount"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/final_order_list"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Next"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>